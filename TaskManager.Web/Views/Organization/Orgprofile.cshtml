@model OrgProfileDetailsModel
@{
    ViewData["Title"] = "Organization profile";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-3"> <label asp-for="OrgAddress" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.OrgAddress</span></div>
            </div>
            <div class="row">
                <div class="col-md-3"> <label asp-for="OrgPhone" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.OrgPhone</span></div>
            </div>
        </div>
        <div class="col-md-6">
            <h2 class="text-center"> Task list </h2>
            <a asp-controller="task" asp-action="create" class=" btn btn-success">create new task</a>

            @if (Model.Tasks.Count() > 0)
            {
                @foreach (var task in Model.Tasks)
                {
                    <a asp-controller="task" asp-action="details" asp-route-id="@task.Id" class=" btn btn-link">@task.Title</a>
                }

            }
            else
            {
                <p>
                    There is not any task in your organization. <a asp-controller="task" asp-action="create" class=" btn btn-link"> Do you want to create new one? </a>
                </p>
            }
            <br />


        </div>
    </div>
</div>