@model UserDetailsModel
@{
    ViewData["Title"] = "User Details";
}

<div class="row">
    <div class="col-md-6">
        <h4 class="text-center">User information</h4>
            <div class="row">
                <div class="col-md-3"> <label asp-for="Username" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.Username</span></div>
            </div>
            <div class="row">
                <div class="col-md-3"> <label asp-for="Email" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.Email</span></div>
            </div>
            <div class="row">
                <div class="col-md-3"> <label asp-for="Name" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.Name</span></div>
            </div>
            <div class="row">
                <div class="col-md-3"> <label asp-for="Surname" class="font-weight-bold"></label> </div>
                <div class="col-md-9"><span>@Model.Surname</span></div>
            </div>
</div>
    <div class="col-md-6">
        <h4 class="text-center">Tasks assigned to user</h4>

        @foreach (var task in Model.Tasks)
        {
    <p>
        <a asp-controller="task" asp-action="details" asp-route-id="@task.Id" class=" btn btn-link">@task.Title</a>
        <small>assigned by @task.AssignedBy on @task.AssignedAt</small>
    </p>
        }
    </div>
</div>
