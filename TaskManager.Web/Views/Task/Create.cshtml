@model TaskCreateModel

@{
    ViewData["Title"] = "Task creation";
}
<div class="container">
    <h1 class="text-center mb-3">Create new task here</h1>
</div>

<div class="row">
    <div class="col-md-8 offset-2 ">
        <form asp-action="create" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label"></label>
                @Html.TextAreaFor(m => m.Description, 5, 20, new { @class = "form-control" })
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group date" id='datetimepicker1'>
                <label asp-for="Deadline" class="form-label"></label>
                <input asp-for="Deadline" class="form-control">
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>


            <button type="submit" class="btn btn-primary w-100 ">create task</button>

        </form>

    </div>
</div>
