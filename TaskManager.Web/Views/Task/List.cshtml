@model IEnumerable<TaskListViewModel>
@{
    ViewData["Title"] = "Task list";
}
    <div class="container">
        <h1 class="text-center">Tasks</h1>
        <p class="text-center"><small>(click on title for details)</small> </p>
    </div>
    <div class="d-inline-flex p-2">
        <a asp-action="Create" class="btn btn-success">create new</a>
    </div>

<div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Deadline</th>
                <th scope="col">Description</th>
                <th scope="col">Created at</th>
                <th scope="col">Created by</th>
                <th scope="col">Status</th>
                <th scope="col">Assigned user count</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="task" asp-action="details" asp-route-id="@task.Id" class=" btn btn-link">@task.Title</a>
                    </td>
                    <td>@task.Deadline</td>
                    <td>@task.Description</td>
                    <td>@task.CreatedAt</td>
                    <td>@task.CreatedBy</td>
                    <td>@task.Status</td>
                    <td>@task.AssignedUserCount</td>
                </tr>

            }

        </tbody>
    </table>
</div>

